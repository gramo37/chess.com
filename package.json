{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "setup": "cp .env.example .env",
    "setup:backend": "cp .env.example ./apps/backend/.env",
    "setup:db": "cp .env.example ./packages/db/prisma/.env",
    "setup:ws": "cp .env.example ./apps/ws/.env",
    "setup:frontend": "cp .env.example ./apps/frontend/.env",
    "dev:setup": "yarn setup && yarn setup:backend && yarn setup:db && yarn setup:ws && yarn setup:frontend && yarn && yarn generate && yarn workspace backend run build"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19"
}
